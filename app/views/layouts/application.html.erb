<%# Apparently it is possible to provide data to yields based on controller %>

<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Linker</title>
    <%= render 'head' %>
  </head>

  <body>
    <div class="pure-g">
      <div class="pure-u-1-6 sidebar">
        <center>
          <a href="#">
            <%= image_tag "logo.png", class: "logo-sign" %>
            <p class="logo">linker</p>
          </a>
        </center>
        <%= yield :sidebar %>
      </div>
      <div class="main pure-u-5-6">
        <div class="header">
          <%= yield :header %>
          <div class="user-header">
            <%= render 'user_header' %>
          </div>
        </div>
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
