<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="pure-alert pure-alert-error">
      There were <%= pluralize(object.errors.count, "error") %>:
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
